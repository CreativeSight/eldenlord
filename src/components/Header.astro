---
import { Menu } from "./Menu";
import { baseUrl } from "../consts";
import { Image } from "astro:assets";
---

<header
  class="z-50 flex items-center p-4 sticky top-0 bg-black border-b-2 border-b-orange-300"
  transition:name="header"
>
  <figure class="flex flex-1">
    <a href=`${baseUrl}`
      ><Image
        src="/eldenlord/images/logo.webp"
        alt="Elden Ring logo"
        loading={"eager"}
        height={32}
        width={200}
      /></a
    >
  </figure>
  <Menu client:load />
</header>
