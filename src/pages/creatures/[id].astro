---
import Item from "../../components/Item.astro";
import Layout from "../../layouts/Layout.astro";
import { getData } from "../../utils/getData";

type Data = {
  description: string;
  drops: string[];
  image: string;
  id: string;
  location: string;
  name: string;
};

export async function getStaticPaths() {
  const data = await getData("creatures");

  return data?.map(
    ({ description, drops, image, id, location, name }: Data) => {
      return {
        params: { id },
        props: {
          description,
          drops,
          image,
          id,
          location,
          name,
        },
      };
    }
  );
}
---

<Layout pageTitle={Astro.props.name} title={Astro.props.name}>
  <Item {...Astro.props} />
</Layout>
