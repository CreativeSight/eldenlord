---
import Item from "../../components/Item.astro";
import Layout from "../../layouts/Layout.astro";
import { getData } from "../../utils/getData";

type Data = {
  affinity: string;
  description: string;
  image: string;
  id: string;
  name: string;
  skill: string;
};

export async function getStaticPaths() {
  const data = await getData("ashes");

  return data?.map(
    ({ affinity, description, image, id, name, skill }: Data) => ({
      params: { id },
      props: {
        affinity,
        description,
        image,
        name,
        skill,
      },
    })
  );
}
---

<Layout pageTitle={Astro.props.name} title={Astro.props.name}>
  <Item {...Astro.props} />
</Layout>
