---
import Item from "../../components/Item.astro";
import Layout from "../../layouts/Layout.astro";
import { getData } from "../../utils/getData";

type Data = {
  description: string;
  effects: string;
  fpCost: number;
  hpCost: number;
  image: string;
  id: string;
  name: string;
};

export async function getStaticPaths() {
  const data = await getData("spirits");

  return data?.map(
    ({ description, effects, fpCost, hpCost, image, id, name }: Data) => ({
      params: { id },
      props: {
        description,
        effects,
        fpCost,
        hpCost,
        image,
        name,
      },
    })
  );
}
---

<Layout pageTitle={Astro.props.name} title={Astro.props.name}>
  <Item {...Astro.props} />
</Layout>
