---
import Item from "../../components/Item.astro";
import Layout from "../../layouts/Layout.astro";
import { getData } from "../../utils/getData";

type Data = {
  attackPower: AttackPower;
  description: string;
  drops: string;
  image: string;
  id: string;
  location: string;
  name: string;
  passive: string;
  type: string;
};

type AttackPower = {
  amount: number;
  name: string;
};

export async function getStaticPaths() {
  const data = await getData("ammos");

  return data?.map(
    ({
      attackPower,
      description,
      image,
      id,
      location,
      name,
      passive,
      type,
    }: Data) => ({
      params: { id },
      props: {
        attackPower,
        description,
        image,
        location,
        name,
        passive,
        type,
      },
    })
  );
}
---

<Layout pageTitle={Astro.props.name} title={Astro.props.name}>
  <Item {...Astro.props} />
</Layout>
