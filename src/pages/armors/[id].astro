---
import Item from "../../components/Item.astro";
import Layout from "../../layouts/Layout.astro";
import { getData } from "../../utils/getData";

type Data = {
  category: string;
  description: string;
  dmgNegation: DmgNegation;
  image: string;
  id: string;
  location: string;
  name: string;
  resistance: Resistance;
  weight: number;
};

type DmgNegation = {
  amount: number;
  name: string;
};

type Resistance = {
  amount: number;
  name: string;
};

export async function getStaticPaths() {
  const data = await getData("armors");

  return data?.map(
    ({
      category,
      description,
      dmgNegation,
      image,
      id,
      location,
      name,
      resistance,
      weight,
    }: Data) => ({
      params: { id },
      props: {
        category,
        description,
        dmgNegation,
        image,
        location,
        name,
        resistance,
        weight,
      },
    }),
  );
}
---

<Layout pageTitle={Astro.props.name} title={Astro.props.name}>
  <Item {...Astro.props} />
</Layout>
