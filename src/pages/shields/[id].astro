---
import Item from "../../components/Item.astro";
import Layout from "../../layouts/Layout.astro";
import { getData } from "../../utils/getData";

type Data = {
  attack: Attack;
  category: string;
  defence: Defence;
  description: string;
  image: string;
  id: string;
  location: string;
  name: string;
  requiredAttributes: RequiredAttributes;
  scalesWith: ScalesWith;
  type: string;
  weight: number;
};

type Attack = RequiredAttributes;

type Defence = RequiredAttributes;

type RequiredAttributes = {
  amount: string;
  name: string;
};

type ScalesWith = Pick<RequiredAttributes, "amount"> & {
  scaling: string;
};

export async function getStaticPaths() {
  const data = await getData("shields");

  return data?.map(
    ({
      attack,
      category,
      defence,
      description,
      image,
      id,
      location,
      name,
      type,
      weight,
    }: Data) => ({
      params: { id },
      props: {
        attack,
        category,
        defence,
        description,
        image,
        id,
        location,
        name,
        type,
        weight,
      },
    })
  );
}
---

<Layout pageTitle={Astro.props.name} title={Astro.props.name}>
  <Item {...Astro.props} />
</Layout>
