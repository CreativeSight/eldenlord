---
import Item from "../../components/Item.astro";
import Layout from "../../layouts/Layout.astro";
import { getData } from "../../utils/getData";

type Data = {
  description: string;
  image: string;
  id: string;
  location: string;
  name: string;
  quote: string;
};

export async function getStaticPaths() {
  const data = await getData("npcs");

  return data?.map(
    ({ description, image, id, location, name, quote }: Data) => ({
      params: { id },
      props: {
        description,
        image,
        location,
        name,
        quote,
      },
    })
  );
}
---

<Layout pageTitle={Astro.props.name} title={Astro.props.name}>
  <Item {...Astro.props} />
</Layout>
