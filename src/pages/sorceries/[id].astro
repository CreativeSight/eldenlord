---
import type Card from "../../components/Card.astro";
import Item from "../../components/Item.astro";
import Layout from "../../layouts/Layout.astro";
import { getData } from "../../utils/getData";

type Data = {
  cost: number;
  description: string;
  effects: string;
  image: string;
  id: string;
  name: string;
  requires: Requires;
  slots: number;
  type: string;
};

type Requires = {
  amount: string;
  name: string;
};

export async function getStaticPaths() {
  const data = await getData("sorceries");

  return data?.map(
    ({
      cost,
      description,
      effects,
      image,
      id,
      name,
      requires,
      slots,
      type,
    }: Data) => ({
      params: { id },
      props: {
        cost,
        description,
        effects,
        image,
        name,
        requires,
        slots,
        type,
      },
    })
  );
}
---

<Layout pageTitle={Astro.props.name} title={Astro.props.name}>
  <Item {...Astro.props} />
</Layout>
