---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import GlobalStyles from "../components/GlobalStyles.astro";
import { ViewTransitions } from "astro:transitions";

const { pageTitle, title } = Astro.props;
const baseUrl = "/eldenlord/";

interface Layout {
  children?: HTMLElement;
  pageTitle?: string;
  title: string;
}
---

<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/png" href="/favicon.png" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>

    <GlobalStyles />
  </head>
  <body
    class="flex flex-col min-h-screen text-lg lg:text-xl text text-orange-200 tracking-wide"
  >
    <Header baseUrl={baseUrl} />
    <main class="flex-1 pt-10 pb-10 pl-5 pr-5">
      {
        pageTitle && (
          <h1 class="first:first-letter:uppercase mb-10 text-center text-2xl md:text-4xl">
            {pageTitle}
          </h1>
        )
      }
      <slot />
    </main>
    <Footer />
    <ViewTransitions />
  </body>
</html>
