---
import Header from "../components/Header.astro";
import Footer from "../components/Footer.astro";
import GlobalStyles from "../components/GlobalStyles.astro";

const { pageTitle, title } = Astro.props;
const baseUrl = "/eldenlord/";

interface Layout {
  children?: HTMLElement;
  pageTitle?: string;
  title: string;
}
---

<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="description" content="Astro description" />
    <meta name="viewport" content="width=device-width" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    <title>{title}</title>
    <GlobalStyles />
  </head>
  <body
    class="flex flex-col min-h-screen text-lg lg:text-xl text text-yellow-400 tracking-wide"
  >
    <Header baseUrl={baseUrl} />
    <main class="flex-1 pt-10 pb-10">
      <h1
        class="first:first-letter:uppercase mb-10 text-center text-2xl md:text-4xl"
      >
        {pageTitle}
      </h1>
      <slot />
    </main>
    <Footer />
  </body>
</html>
